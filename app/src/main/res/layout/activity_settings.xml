<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrii.positioncalculator.SettingsActivity">
    <Button
        android:id="@+id/return_btn2"
        android:layout_width="217dp"
        android:layout_height="61dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#fff"
        android:fontFamily="@font/medium"
        android:text="Назад"
        android:textColor="@color/black"
        android:textSize="14dip"
        app:cornerRadius="60dp"
        app:iconTint="#EDE2E2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/buttons"
        app:strokeWidth="7dp" />

    <Switch
        android:id="@+id/notify_swtch"
        android:layout_width="311dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:buttonTint="#E91E63"
        android:checked="false"
        android:fontFamily="@font/medium"
        android:text="Уведомления  "
        android:textIsSelectable="false"
        android:textSize="20dip"
        android:thumbTint="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_update_text"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/notify_swtch2"
        android:layout_width="311dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:buttonTint="#E91E63"
        android:checked="false"
        android:fontFamily="@font/medium"
        android:text="Не беспокоить ночью"
        android:textIsSelectable="false"
        android:textSize="20dip"
        android:thumbTint="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_swtch"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/medium"
        android:text="Настройки"
        android:textColor="#673AB7"
        android:textSize="24dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Неактивно"
        android:textColor="#08BC11"
        android:textSize="16dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/last_update_text"
        android:layout_width="322dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/medium"
        android:textAlignment="center"
        android:textSize="14dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_text" />

</androidx.constraintlayout.widget.ConstraintLayout>