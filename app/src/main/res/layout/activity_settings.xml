<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrii.positioncalculator.Activities.SettingsActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="288dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:text="Чем меньше интервал, тем больше расход батареи!"
        android:textColor="#FB8C00"
        android:textSize="14dip"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/return_btn2"
        android:layout_width="217dp"
        android:layout_height="61dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#fff"
        android:fontFamily="@font/medium"
        android:text="Назад"
        android:textColor="@color/black"
        android:textSize="14dip"
        app:cornerRadius="60dp"
        app:iconTint="#EDE2E2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/buttons"
        app:strokeWidth="7dp" />

    <Switch
        android:id="@+id/notify_swtch"
        android:layout_width="311dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:buttonTint="#E91E63"
        android:checked="false"
        android:fontFamily="@font/medium"
        android:text="Уведомления  "
        android:textIsSelectable="false"
        android:textSize="20dip"
        android:thumbTint="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_update_text"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/notify_swtch2"
        android:layout_width="311dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:buttonTint="#E91E63"
        android:checked="false"
        android:fontFamily="@font/medium"
        android:text="Не беспокоить ночью"
        android:textIsSelectable="false"
        android:textSize="20dip"
        android:thumbTint="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_swtch"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/medium"
        android:text="Настройки"
        android:textColor="#673AB7"
        android:textSize="24dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/medium"
        android:text="Неактивно"
        android:textColor="#08BC11"
        android:textSize="16dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/last_update_text"
        android:layout_width="322dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/medium"
        android:textAlignment="center"
        android:textSize="14dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_text" />

    <Spinner
        android:id="@+id/period_spinner"
        android:layout_width="139dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:entries="@array/periods"
        android:fontFamily="@font/medium"
        android:prompt="@string/period_prompt"
        app:layout_constraintEnd_toEndOf="@+id/notify_swtch2"
        app:layout_constraintTop_toBottomOf="@+id/notify_swtch2"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/price_spinner"
        android:layout_width="139dp"
        android:layout_height="35dp"
        android:layout_marginTop="72dp"
        android:entries="@array/prices"
        android:fontFamily="@font/medium"
        android:prompt="@string/period_prompt"
        app:layout_constraintEnd_toEndOf="@+id/notify_swtch2"
        app:layout_constraintTop_toBottomOf="@+id/notify_swtch2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="131dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/medium"
        android:text="Интервал"
        android:textAlignment="textStart"
        android:textColor="#1B1515"
        android:textSize="20dip"
        app:layout_constraintStart_toStartOf="@+id/notify_swtch2"
        app:layout_constraintTop_toBottomOf="@+id/notify_swtch2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="131dp"
        android:layout_height="32dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/medium"
        android:text="Колебание"
        android:textAlignment="textStart"
        android:textColor="#1B1515"
        android:textSize="20dip"
        app:layout_constraintStart_toStartOf="@+id/notify_swtch2"
        app:layout_constraintTop_toBottomOf="@+id/notify_swtch2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="288dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:text="Внимание: изменения интервала войдут в силу после перезапуска уведомлений!"
        android:textColor="#D81B60"
        android:textSize="14dip"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/price_spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>